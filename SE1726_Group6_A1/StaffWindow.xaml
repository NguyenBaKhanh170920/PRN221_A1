<Window x:Class="SE1726_Group6_A1.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE1726_Group6_A1"
        mc:Ignorable="d"
        Title="StaffWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Menu" 
FontSize="25"
HorizontalAlignment="Center"
VerticalAlignment="Top"
FontWeight="Bold"
Padding="10"
/>
            <Button Content="Update profile" Width="151" Click="btnView_Click" Margin="10"></Button>
            <Button Content="Manage Order" Width="151" Margin="10" Click="btnOrderView_Click"/>
            <Button Content="Order Report" Width="151" Click="Button_Click" Margin="10"></Button>
            <Button Content="Logout" Width="151" Click="btnOut_Click" Margin="10"></Button>
        </StackPanel>
    </Grid>
</Window>
